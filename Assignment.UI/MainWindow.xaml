<Window x:Class="Assignment.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Assignment 03, Question 02 [Data Security]" HorizontalAlignment="Center" FontSize="14"/>
        <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Left" MinWidth="150">
            <Button Name="btnGetUsers" Content="(a). Get Users by Id" Click="btnGetUsers_Click" HorizontalContentAlignment="Left" Margin="5"/>
            <Button Name="btnLogin" Content="(b). Login user" Click="btnLogin_Click" HorizontalContentAlignment="Left" Margin="5"/>
        </StackPanel>
        <ContentControl Name="ctrlContent" Grid.Row="2"/>
    </Grid>
</Window>
